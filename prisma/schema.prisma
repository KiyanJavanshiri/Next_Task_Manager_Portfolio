enum Columns {
  TODO
  IN_PROGRESS
  DONE
}

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  login     String   @unique
  password  String
  firstName String
  lastName  String
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  boards   Board[]       @relation("OwnerBoards")
  memberIn BoardMember[]

  tasks Task[] @relation("UserTasks")
}

model Board {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  backgroundColor String?

  ownerId String @db.ObjectId
  owner   User   @relation("OwnerBoards", fields: [ownerId], references: [id])

  members BoardMember[]

  tasks Task[]

  createdAt DateTime @default(now())
}

model BoardMember {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  boardId String @db.ObjectId
  board   Board  @relation(fields: [boardId], references: [id])

  joinedAt DateTime @default(now())

  @@unique([userId, boardId]) 
}

model Task {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?

  boardId String @db.ObjectId
  board   Board  @relation(fields: [boardId], references: [id])

  assigneeId String? @db.ObjectId
  assignee   User?   @relation("UserTasks", fields: [assigneeId], references: [id])

  status    Columns?   @default(TODO)
  createdAt DateTime @default(now())
}
